<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header do Usuário -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txt_nome_motorista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👨‍💼 Nome do Motorista"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txt_email_motorista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📧 email@exemplo.com"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botões de Ação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Botão Gerenciar Viagem -->
            <Button
                android:id="@+id/btn_gerenciar_viagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚀 Gerenciar Viagem"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_success"
                android:padding="16dp"
                android:layout_marginBottom="12dp" />

            <!-- Botão Localização -->
            <Button
                android:id="@+id/btn_localizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📍 Localização"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_primary"
                android:padding="16dp"
                android:layout_marginBottom="12dp" />

            <!-- Botão Mensagens -->
            <Button
                android:id="@+id/btn_mensagens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💬 Mensagens"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_secondary"
                android:padding="16dp"
                android:layout_marginBottom="12dp" />

            <!-- Botão Configurações -->
            <Button
                android:id="@+id/btn_configuracoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚙️ Configurações"
                android:textColor="@color/primary_blue"
                android:background="@drawable/bg_button_outline"
                android:padding="16dp"
                android:layout_marginBottom="12dp" />

            <!-- Botão Logout -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚪 Sair"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_error"
                android:padding="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView> 