<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Card de Status da Viagem -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_view_status_viagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Aguardando InÃ­cio"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txt_horario_inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="InÃ­cio: --:--"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#666666" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Card de Contadores -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/txt_total_alunos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total de alunos: 0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#2196F3" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e0e0e0" />

            <TextView
                android:id="@+id/txt_alunos_confirmados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Confirmados: 0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#4CAF50" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- BotÃµes de Controle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <!-- BotÃ£o Iniciar -->
        <Button
            android:id="@+id/btn_iniciar_viagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš€ Iniciar Viagem"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_success"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- BotÃµes de Controle da Viagem -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_pausar_viagem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â¸ï¸ Pausar Viagem"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_warning"
                android:layout_marginEnd="6dp"
                android:padding="12dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_finalizar_viagem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ Finalizar Viagem"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_error"
                android:layout_marginStart="6dp"
                android:padding="12dp"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>

    <!-- TÃ­tulo da Lista -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“‹ Lista de Alunos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="10dp" />

    <!-- Lista de Alunos -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="4dp">

        <ListView
            android:id="@+id/list_view_alunos_viagem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#e0e0e0"
            android:dividerHeight="1dp"
            android:padding="8dp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>